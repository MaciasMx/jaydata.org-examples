@section CodeRunning {
    <section id="wrapper" class="">
        <h2 class="margin10">Choose your prefered provider:</h2>
        <p id="providerSelection" class="download-info">
            <button id="btnSql" value="sqLite" class="btn btn-medium">WebSQL Pro</button>
            <button id="btnIdb" value="indexedDb" class="btn btn-medium">IndexedDB Pro</button>
        </p>
        <p id="error" class="download-info">
            Save failed, error occured!
        </p>
        <div>
            <input id="txtId" type="number" style="width: 75px; vertical-align:top;" class="reset-m" />
            <input id="txtNew" type="text" style="vertical-align:top;" class="reset-m" />
            <div style="display:inline-block;width:180px;">
                <button id="btnAdd" class="btn btn-small" style="width:65px; margin-bottom:7px;">Add</button>
                <button id="btnCommit" class="btn btn-small" title="Commit" style="width:105px; margin-bottom:7px;">Commit</button>
                <button id="btnClear" class="btn btn-small" style="width:65px;">Clear</button>
                <button id="btnCommitTran" class="btn btn-small" title="Commit using transaction" style="width:105px;">CommitTran</button>
            </div>
        </div>
        <div id="todoList"></div>
    </section>
    <script id="todoEntryTemplate" type="text/html">
        <div class="todoEntry row clear margin10">
            <div class="fleft iblock marginr10" style="width: 75px;">
                <label>${Id}</label></div>
            <div class="fleft iblock marginr10" style="min-width: 215px;">
                <label>${Value }</label>
            </div>
            {{if _entityState == 20 || _entityState == 30}}
            <div><span>Need commit to save data</span></div>
            {{else}}
            {{if Done}}
            <button value="undone" class="btn btn-small btn-inverse tshadow">Undone</button>
            {{else}}
            <button value="done" class="btn btn-small btn-success tshadow">Done</button>
            {{/if}}
            <button value="delete" class="btn btn-small btn-danger tshadow">Delete</button>
            {{/if}}
        </div>
    </script>
    <script id="todoTempEntryTemplate" type="text/html">
        <div class="todoEntry row clear margin10">
            <div class="fleft iblock marginr10" style="width: 75px;">
                <label>${Id}</label></div>
            <div class="fleft iblock marginr10" style="min-width: 215px;">
                <label>${Value }</label>
            </div>
            <div><span>Need commit to save data</span></div>
        </div>
    </script>
}
