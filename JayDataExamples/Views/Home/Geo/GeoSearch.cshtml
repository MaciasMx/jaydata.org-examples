}).addTo(lmap);
$data.initService(svc).then(function (mydatabase) {
    function refresh(latlng, r) {
        lgroup.clearLayers();
        mydatabase.POI
        .filter('it.coord.distance(p) < r/R', {
            p: new $data.GeographyPoint(latlng.lng, latlng.lat),
            r: r,
            R: 6371000
