@{ Layout = "~/Views/Shared/Layout_KendoUI.cshtml"; }

@section Title {
    <h1>KendoUI Bar Chart (JayData example)</h1>
}

@section Meta {
    <meta name="keywords" content="JayData, HTML5, Javascript, JayData providers, WebSQL, IndexedDB, example" />
    <meta name="description" content="How to use the JayData with Kendo! See this simple chart example." />
}

@section Includes {
    <script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-migrate-1.0.0.js"></script>
    <script type="text/javascript" src="http://cdn.kendostatic.com/2012.2.710/js/kendo.all.min.js"></script>
    <script type="text/javascript" src="http://include.jaydata.org/1.2.7/jaydata.js"></script>
    <script type="text/javascript" src="http://include.jaydata.org/1.2.7/jaydatamodules/kendo.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/north.js"></script>
    <script type="text/javascript" src="http://jaydata-cdn.s3.amazonaws.com/datajs-1.0.3-patched.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/codemirror/lib/codemirror.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/codemirror/mode/xml/xml.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/codemirror/mode/htmlmixed/htmlmixed.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor/codemirror/mode/javascript/javascript.js"></script>

    <link rel="stylesheet" type="text/css" href="http://cdn.kendostatic.com/2012.2.710/styles/kendo.common.min.css" />
    <link rel="stylesheet" type="text/css" href="http://cdn.kendostatic.com/2012.2.710/styles/kendo.default.min.css" />
    <link href="../Styles/Bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="../Styles/Bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="../Styles/Bootstrap/docs.css" rel="stylesheet" />
    <link href="../Styles/dd.css" rel="stylesheet" />
    <link href="~/Scripts/vendor/codemirror/lib/codemirror.css" rel="stylesheet" />

    <link href="../Styles/img/favicon_jaydata.png" rel="shortcut icon" type="image/x-icon" />
}



@section Description {
    <p class="header-desc">
        This KendoUI Dataviz bar chart example uses a remote Northwind database.
    </p>
    <div class="tacenter">
        <div class="box-jsfiddle">You can play with this example on <a class="logo-jsfiddle blue" target="_blank" href="http://jsfiddle.net/JayData/F4Hda/">jsfiddle</a></div>
    </div>
}

@section CodeSource {
    <textarea id="code">
<div id="grid"></div>
<script>
    $("#chart").kendoChart({
        dataSource: remoteDB.Products.asKendoDataSource(),
        title: {
            text: "Products in stock"
        },
        series: [{
            type: "column",
            field: "Units_In_Stock",
            name: "Units In Stock"
        }],
        categoryAxis: {
            field: "Product_Name",
            labels: {
                rotation: -90
            }
        },
    });
</script>
</textarea>
    <script>
        setTimeout(function () {
            CodeMirror.fromTextArea(document.getElementById('code'), {
                mode: 'text/html',
                lineNumbers: false
            });
        });
    </script>
}

@section CodeRunning {
    <div id="chart"></div>
    <script>
        $.when($.ready, getRemoteNorthwind())
        .then(function ($, remoteDB) {
            $("#chart").kendoChart({
                dataSource: remoteDB.Products.asKendoDataSource(),
                title: {
                    text: "Products in stock"
                },
                series: [{ type: "column", field: "Units_In_Stock", name: "Units In Stock" }],
                categoryAxis: {
                    field: "Product_Name",
                    labels: {
                        rotation: -90
                    }
                },
            });
        });
    </script>
}
